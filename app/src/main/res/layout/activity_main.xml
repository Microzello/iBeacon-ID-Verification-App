<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/tvCompanyId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/company_id"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_message"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/tvPersonalId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/personal_id"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnScanQr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scan_qr_code"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/tvScannedCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scanned_code_placeholder"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnAuthenticate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/authenticate"
        android:layout_marginTop="16dp"
        android:enabled="false" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="24dp" />

</LinearLayout> 